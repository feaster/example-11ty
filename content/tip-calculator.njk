<div class="p-5 text-center bg-body-inverse-info">
  <h1 class="text-info">Tip Calculator</h1>
  <p class="text-primary">This page uses JavaScript to calculate a total bill based on the pre-tip total and tip percentage that you enter!</p>
</div>

<div class="container-fluid p-5 bg-body-inverse-tertiary text-secondary">
    <form name="tipCalculator" id="tipCalculator" class="row">
        <div class="row p-0 m-0">
            <div class="col-5">
                <div class="mb-3">
                    <label for="preTipTotal" class="form-label">Pre-tip total</label>
                    <div class="input-group">
                        <span class="input-group-text">£</span>
                        <input type="number" step="0.01" min="0" class="form-control" name="preTipTotal" id="preTipTotal" placeholder="0.00" aria-label="Pre-tip total" required>
                    </div>
                </div>
            </div>
            <div class="col-5">
                <div class="mb-3">
                    <label for="tipPercentage" class="form-label">Tip percentage</label>
                    <div class="input-group">
                        <input type="number" min="0" class="form-control" name="tipPercentage" id="tipPercentage" placeholder="0" aria-label="Tip percentage" required>
                        <span class="input-group-text">%</span>
                    </div>
                </div>
            </div>
            <div class="col-2 align-self-end">
                <div class="mb-3 text-center">
                    <button class="btn btn-lg btn-secondary" type="submit">submit</button>
                </div>
            </div>
        </div>
        <div class="row p-0 pt-3 m-0">
            <p id="totalBill" class="fw-bold">Your total bill, with tip, is ...</p>
        </div>
    </form>
</div>

<script>
    const tipForm = document.getElementById('tipCalculator');
    tipForm.addEventListener('submit', function(event) {
        const preTipTotal = tipForm.elements.preTipTotal.value;
        const tipPercentage = tipForm.elements.tipPercentage.value;
        event.preventDefault();
        let newTotal = preTipTotal * (1 + tipPercentage/100);
        newTotal = newTotal.toFixed(2);
        document.getElementById("totalBill").innerHTML = `Your total bill, with tip, is £${newTotal}`;
    });
</script>