---
layout: layouts/base.njk
---

<div class="p-5 text-center">
  <h1 class="text-info">Contact Us</h1>
  <p class="text-primary">Got a question? Please fill out the form below!</p>
</div>

<div class="container-fluid m-0 p-5 bg-body-inverse-tertiary text-secondary">
  <form method="POST" netlify name="contact" class="row needs-validation">
    <div class="row p-0 m-0">
      <div class="col">
        <div class="mb-3">
          <label for="firstname" class="form-label">First name</label>
          <input type="text" class="form-control" name="firstname" id="firstname" aria-label="First name" required>
        </div>
      </div>
      <div class="col">
        <div class="mb-3">
          <label for="surname" class="form-label">Surname</label>
          <input type="text" class="form-control" name="surname" id="surname" aria-label="Surname" required>
        </div>
      </div>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" aria-label="Email address" required>
    </div>
    <div class="mb-3">
      <label for="message" class="form-label">Message</label>
      <textarea class="form-control" name="message" id="message" rows="3" placeholder="Please type your message here" aria-label="Message" required></textarea>
    </div>
    <div class="mb-3">
      <input class="form-check-input" type="checkbox" value="" id="t&cs" required>
      <label for="t&cs" class="form-check-label">Please tick to accept the terms and conditions</label>
    </div>
    <div class="mb-3">
      <button class="btn btn-lg btn-primary" type="submit">submit</button>
    </div>
  </form>
</div>
